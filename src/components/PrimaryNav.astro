---
import av1 from "./placeholders/av01.jpg";
---
<nav class="flex bg-offWhite min-h-10 w-full font-roboto font-bold px-4 py-4 sm:py-2">
<!-- Brand -->
    <div class="flex-1 flex text-2xl font-medium items-center">
        <i class="fas fa-pizza-slice text-darkGrey mr-4 "></i>
        <h1 class="text-cheesyYellow">
            Open
            <span class="text-darkGrey">Sauced</span>
        </h1>
    </div>

<!-- Login and Avatar -->
    <div class="items-center">
        <div class="rounded-full w-10 h-10 overflow-hidden ring-2 ring-red-800">
            <img
                class="object-cover w-[500] h-[500]"
                src={av1}
                alt="Avatar 02"
            />
        </div>
    </div>
</nav>
